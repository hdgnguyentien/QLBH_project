@{
    ViewData["Title"] = "Login Page";
    var ketqua = ViewData["ketqua"] as string;
}
    <h1>Đăng nhập</h1>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <form method="get" asp-controller="Account" asp-action="Login" >
                    <h6>Nếu bạn đã có tài khoản, đăng nhập tại đây.</h6>
                    @if(ketqua!=null){
                        <div class="alert alert-success">@ketqua</div>
                    }

                    @if (ViewBag.errorEmail != null)
                    {
                        <div class="alert alert-danger">@ViewBag.errorEmail</div>
                    }
                    <div class="form-group">
                        <input name="email" class="form-control" placeholder="Email"required />
                        
                    </div>
                    <div class="form-group">
                        <input type="password"  name="password" class="form-control" placeholder="Password"required />
                    </div>

                    <button type="submit" class="btn btn-success">Đăng nhập</button>

                    <a asp-action="Register">Đăng ký</a><br />
                        
                </form>
            </div>
            <div class="col-6">
                <h6>Bạn quên mật khẩu? Nhập địa chỉ email để lấy lại mật khẩu qua email.</h6>
                <form method="get" asp-controller="Account" asp-action="Resetpassword">
                    <div class="form-group">
                    <input name="emailSend"class="form-control" type="email" placeholder="Email" required/><br />
                    </div>
                    <button type="submit" class="btn btn-success">Lấy lại mật khẩu</button>
                </form>
            </div>
        </div>
    </div>