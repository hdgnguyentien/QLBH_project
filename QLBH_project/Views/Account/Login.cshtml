@{
    ViewData["Title"] = "Login Page";
    var ketqua = ViewData["ketqua"] as string;
}
    <h1>Đăng nhập</h1>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <form method="get" asp-controller="Account" asp-action="Login">
                    <h6>Nếu bạn đã có tài khoản, đăng nhập tại đây.</h6>
                    <span >@ViewBag.ketqua</span>
                    <div class="form-group">

                        <label class="control-label">Email</label>
                        <input  name="email" class="form-control"required />

                    </div>

                    <div class="form-group">
                        <label   class="control-label">Password</label>
                        <input type="password"  name="password" class="form-control"required />
                    </div>
                    <button type="submit" class="btn btn-success">Đăng nhập</button>

                    <a asp-action="Register">Đăng ký</a><br />
                        <span class="text-danger">@ViewBag.errorEmail</span>
                </form>
            </div>
            <div class="col-6">
                <h6>Bạn quên mật khẩu? Nhập địa chỉ email để lấy lại mật khẩu qua email.</h6>
                <form method="get" asp-controller="Account" asp-action="Resetpassword">
                    <div class="form-group">
                     <label   class="control-label">Email</label>
                    <input name="email"class="form-control" type="email"  required/><br />
                    </div>
                    <button type="submit" class="btn btn-success">Lấy lại mật khẩu</button>
                </form>
            </div>
        </div>
    </div>