@{
}
<div class="container">
 <h1 class="text-center">Check Out</h1>
    <div class="row">
       
        <div class="col-7">
            <h3>Đơn hàng</h3><br />
            <table class="table">
            <thead>
                <tr>
                    <th>Ảnh</th>
                    <th>Tên</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
             <tbody>
                    @foreach (var item in Model.cartItems)
                    {
                         <tr>
                                    <td>
                                        <img
                                    src="@item.Image"
                                    alt=""
                                    style="margin: 5px 5px 5px 5px"
                                    width="60"
                                    />
                                    </td>
                                    <td>@item.ProductdetailsName</td>
                                    <td>@item.Price</td>
                                    <td>@item.Quatity</td>
                                    <td>@item.Total</td>
                                </tr>
                    }
                <tr>
                        <td class="text-right" colspan="6"><h6>Tổng tiền: @Model.grandtotal</h6> </td>
                </tr>
            </tbody>

            </table>
        </div>
        <div class="col-5">
            <h3>Thông tin nhận hàng</h3><br />
            <form method="get"asp-controller="Cart"asp-action="Thanhtoan" class="form-group">
                <input name="phone" class="form-control" placeholder="Số điện thoại khách hàng" required/><br />
                <input name="name" class="form-control" placeholder="Tên khách hàng" required/><br />
                <input name="address" class="form-control" placeholder="Địa chỉ khách hàng" required/><br />
                <button type="submit"class="btn btn-success" asp-controller="Cart" asp-action="Thanhtoan">Thanh toán</button>
            </form>
        </div>


        @*<div class="col-4">3</div>*@

    </div>
</div>