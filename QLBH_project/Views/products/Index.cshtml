@model IEnumerable<QLBH_project.Models.products>

@{
    ViewData["Title"] = "Index";
    var thongbao = ViewData["result"] as string;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="SearchByName">Search By Name</a>
</p>
<form method="get" asp-controller="products" asp-action="SearchByName2">
    <input name="name" type="text" placeholder="Search"/>
    <button type="submit">Tìm Kiếm</button>
</form>

@if (Model != null)
{ 
                  <table class="table">
                   <thead>
                    <tr>
                     <th>
                        @Html.DisplayNameFor(model => model.Name)
                     </th>
                     <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                     <th></th>
                    </tr>
                 </thead> 
              <tbody> 
            @foreach (var item in Model)
            {
              <tr>
                 <td>
                     @Html.DisplayFor(modelItem => item.Name)
                 </td>
                 <td>
                        @(item.Status ? "Mở bán" : "Không mở bán")
                 </td>
                     <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                     </td>
              </tr>
            }
       </tbody>
              </table>

}
else
{
     <a>@thongbao</a>
}
